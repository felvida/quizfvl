<!--views/quizes/index.ejs -->
Buscador de preguntas
<form method="get" action="/quizes">
 <p><input name="search" value="Texto a buscar" type="text">
 <input value="Enviar" type="submit"></p>
</form>
<table>
	<% var i; for (i=0; i < quizes.length; i++) { %>
	<tr>
		<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td><td><%= quizes[i].tema %></td>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button type="button">Edita</button></a></td>
		<td><form method="post" action="quizes/<%=quizes[i].id%>?_method=delete">
		 <button type="submit" onClick="return confirm('Borrar:<%= quizes[i].pregunta%>');">Borrar
		 </button></form>
		</td>
	</tr>
	<% } %>
</table><p>
<a href="/quizes/new"><button type="button">Crea pregunta</button></a>
